<?xml version="1.0" encoding="UTF-8"?>
<zabbix_export>
    <version>4.4</version>
    <date>2020-06-17T18:13:20Z</date>
    <groups>
        <group>
            <name>Templates</name>
        </group>
    </groups>
    <templates>
        <template>
            <template>Template MD Software RAID</template>
            <name>Template MD Software RAID</name>
            <description>Monitoring of MD Software RAID</description>
            <groups>
                <group>
                    <name>Templates</name>
                </group>
            </groups>
            <applications>
                <application>
                    <name>MD</name>
                </application>
            </applications>
            <discovery_rules>
                <discovery_rule>
                    <name>MD Discovery</name>
                    <key>md.discover</key>
                    <delay>1h</delay>
                    <filter>
                        <conditions>
                            <condition>
                                <macro>{#MDNAME}</macro>
                                <value>.*</value>
                                <formulaid>A</formulaid>
                            </condition>
                        </conditions>
                    </filter>
                    <item_prototypes>
                        <item_prototype>
                            <name>MD $1 degraded</name>
                            <key>md.degraded[{#MDNAME}]</key>
                            <delay>5m</delay>
                            <description>Get number of degraded disks</description>
                            <applications>
                                <application>
                                    <name>MD</name>
                                </application>
                            </applications>
                            <request_method>POST</request_method>
                            <trigger_prototypes>
                                <trigger_prototype>
                                    <expression>{last()}&gt;0</expression>
                                    <name>MD {#MDNAME} is degraded on {HOST.NAME}</name>
                                    <priority>HIGH</priority>
                                </trigger_prototype>
                            </trigger_prototypes>
                        </item_prototype>
                        <item_prototype>
                            <name>MD $1 raid disks</name>
                            <key>md.raid_disks[{#MDNAME}]</key>
                            <delay>1h</delay>
                            <description>Get number of all disks</description>
                            <applications>
                                <application>
                                    <name>MD</name>
                                </application>
                            </applications>
                            <request_method>POST</request_method>
                            <trigger_prototypes>
                                <trigger_prototype>
                                    <expression>{diff()}&gt;0</expression>
                                    <name>MD {#MDNAME} number of disks changed on {HOST.NAME}</name>
                                    <priority>WARNING</priority>
                                </trigger_prototype>
                            </trigger_prototypes>
                        </item_prototype>
                        <item_prototype>
                            <name>MD $1 sync action</name>
                            <key>md.sync_action[{#MDNAME}]</key>
                            <delay>5m</delay>
                            <trends>0</trends>
                            <value_type>TEXT</value_type>
                            <description>Get current sync action</description>
                            <applications>
                                <application>
                                    <name>MD</name>
                                </application>
                            </applications>
                            <request_method>POST</request_method>
                            <trigger_prototypes>
                                <trigger_prototype>
                                    <expression>{str(check)}=1</expression>
                                    <name>MD {#MDNAME} in check mode on {HOST.NAME}</name>
                                    <priority>INFO</priority>
                                </trigger_prototype>
                                <trigger_prototype>
                                    <expression>{str(recover)}=1</expression>
                                    <name>MD {#MDNAME} in recovery mode on {HOST.NAME}</name>
                                    <priority>INFO</priority>
                                </trigger_prototype>
                            </trigger_prototypes>
                        </item_prototype>
                        <item_prototype>
                            <name>MD $1 sync completed</name>
                            <key>md.sync_completed[{#MDNAME}]</key>
                            <delay>2m</delay>
                            <value_type>FLOAT</value_type>
                            <description>Get completion of RAID</description>
                            <applications>
                                <application>
                                    <name>MD</name>
                                </application>
                            </applications>
                            <trigger_prototypes>
                                <trigger_prototype>
                                    <expression>{last()}&lt;100</expression>
                                    <name>MD {#MDNAME} is</name>
                                    <opdata>{ITEM.LASTVALUE1}% completed</opdata>
                                    <priority>DISASTER</priority>
                                </trigger_prototype>
                            </trigger_prototypes>
                        </item_prototype>
                        <item_prototype>
                            <name>MD $1 sync speed</name>
                            <key>md.sync_speed[{#MDNAME}]</key>
                            <delay>2m</delay>
                            <units>Bps</units>
                            <description>Get speed of syncing RAID</description>
                            <applications>
                                <application>
                                    <name>MD</name>
                                </application>
                            </applications>
                            <preprocessing>
                                <step>
                                    <type>MULTIPLIER</type>
                                    <params>1024</params>
                                </step>
                            </preprocessing>
                            <trigger_prototypes>
                                <trigger_prototype>
                                    <expression>{last()}&gt;0</expression>
                                    <name>MD {#MDNAME} is syncing</name>
                                    <opdata>@{ITEM.LASTVALUE1}</opdata>
                                    <priority>DISASTER</priority>
                                </trigger_prototype>
                            </trigger_prototypes>
                        </item_prototype>
                    </item_prototypes>
                    <graph_prototypes>
                        <graph_prototype>
                            <name>MD {#MDNAME} degration</name>
                            <graph_items>
                                <graph_item>
                                    <color>1A7C11</color>
                                    <item>
                                        <host>Template MD Software RAID</host>
                                        <key>md.degraded[{#MDNAME}]</key>
                                    </item>
                                </graph_item>
                                <graph_item>
                                    <sortorder>1</sortorder>
                                    <color>F63100</color>
                                    <item>
                                        <host>Template MD Software RAID</host>
                                        <key>md.sync_speed[{#MDNAME}]</key>
                                    </item>
                                </graph_item>
                                <graph_item>
                                    <sortorder>2</sortorder>
                                    <color>2774A4</color>
                                    <item>
                                        <host>Template MD Software RAID</host>
                                        <key>md.sync_completed[{#MDNAME}]</key>
                                    </item>
                                </graph_item>
                            </graph_items>
                        </graph_prototype>
                    </graph_prototypes>
                    <request_method>POST</request_method>
                </discovery_rule>
            </discovery_rules>
        </template>
    </templates>
</zabbix_export>
